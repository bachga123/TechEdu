@model PagedList.IPagedList<BaiTapTuan7.Models.tb_Student>
@using PagedList.Mvc
@{
    ViewBag.Title = "StudentList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h2 mb-0 text-gray-800">Student</h1>
            </div>
            <div class="table table-hover">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <div class="row">
                            <div class="col-md-10">
                                <h6 class="m-0 font-weight-bold text-primary">Student List</h6>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("ExportStudentListInCourse","Student")" class="btn btn-primary">Export Student Data</a>
                            </div>
                        </div>                       
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Gmail</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr onclick="location.href='@Url.Action("EditStudent",new { Id = item.StudentId})'">
                                                    <td>@item.FirstName</td>
                                                    <td>@item.LastName</td>
                                                    <td>@item.Gmail</td>
                                                    <td>
                                                        @Html.ActionLink("Remove", "Delete", "Student", new { stuid = item.StudentId }, new { onclick = "return confirm('Are you sure to remove this student?');", @class = "btn btn-danger" })
                                                        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-l" value="@item.StudentId">Details</button>*@
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_paginate">
                                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>