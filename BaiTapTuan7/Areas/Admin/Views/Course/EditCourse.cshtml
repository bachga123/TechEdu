@model BaiTapTuan7.Models.tb_Course

@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
